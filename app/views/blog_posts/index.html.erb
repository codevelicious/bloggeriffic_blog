<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>
<div> 
  <% @blog_posts.each do |blog_post| %>
    <div class="well well-lg users-well">
      <p>
        <h3><%= blog_post.title %></h3>
        <p>@<%= blog_post.user.username %></p>
        <p><%= blog_post.blog_entry[0..50] %>...</p>
        <p>
          <%= link_to 'Read More', blog_post, class: "btn btn-info" %>
        </p>

      </p>
    </div>
  <% end %>
</div>  
<br>

<%= link_to 'New Blog post', new_blog_post_path %>
